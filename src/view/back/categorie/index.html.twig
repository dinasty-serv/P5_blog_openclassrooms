{% extends "/layout/back.html.twig" %}
{% block content %}
	<div class="row">
		<div class="col-md-6">
			<h3>Liste des Catégories</h3>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom</th>
						<th scope="col">slug</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for categorie in categories %}
						<tr>
							<th scope="row">{{post.id}}</th>

							<td>{{categorie.name}}</td>

							<td>{{categorie.slug}}</td>

							<td>
								<a href='{{route('admin.editCategorie',{'id': categorie.id})}}' class="btn btn-primary btn-sm">


									<i class="fas fa-edit"></i>
									Editer
								</a>
								<a onclick="return confirm('Attention supression de tout les articles de cette catégorie !')" href='{{route('admin.deleteCategorie',{'id': categorie.id})}}' class="btn btn-danger btn-sm">


									<i class="fas fa-trash"></i>
									Supprimer
								</a>

							</td>
						</tr>
					{% endfor %}

				</tbody>
			</tbody>
		</table>
	</div>
	<div class="col-md-6">
		<h3>Ajouter une catégorie</h3>
		<div class="card-body">
			<form action="{{route('admin.addCategorie')}}" method="POST" name="EditPost" id="EditPost">

				<input type="hidden" name="csrf_token" id="csrf_token" value="{{csrf_token}}">


				<div class="form-group">
					<label for="title">Nom de la catégorie</label>
					<input type="text" class="form-control" name="name" id="name" value="{{categorie.title}}">
				</div>
				<button type="submit" class="btn btn-primary">Enregistrer</a>
			</form>
		</div>

	</table>
</div>{% endblock %}
